<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jalp.zeus.ControlPanelActivity"
    tools:showIn="@layout/activity_control_panel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="330dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Kettle"
            android:id="@+id/textKettleTitle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/buttonStopKettle"
            android:layout_alignEnd="@+id/buttonStopKettle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BOIL"
            android:id="@+id/buttonStopKettle"
            android:layout_below="@+id/textKettleTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65 째C"
            android:id="@+id/radioButtonKettle65"
            android:layout_alignTop="@+id/buttonStopKettle"
            android:layout_centerHorizontal="true"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80 째C"
            android:id="@+id/radioButtonKettle80"
            android:layout_below="@+id/radioButtonKettle65"
            android:layout_alignLeft="@+id/radioButtonKettle65"
            android:layout_alignStart="@+id/radioButtonKettle65"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95 째C"
            android:id="@+id/radioButtonKettle95"
            android:layout_below="@+id/radioButtonKettle80"
            android:layout_alignLeft="@+id/radioButtonKettle80"
            android:layout_alignStart="@+id/radioButtonKettle80"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 째C"
            android:id="@+id/radioButtonKettle100"
            android:layout_below="@+id/radioButtonKettle95"
            android:layout_alignLeft="@+id/radioButtonKettle95"
            android:layout_alignStart="@+id/radioButtonKettle95"
            android:checked="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="230dp"></RelativeLayout>
</RelativeLayout>
